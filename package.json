{
  "name": "ngxplat-o365-angular-cli",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build --base-href . && cp src/index.js dist/index.js && cp src/package.json dist/package.json && electron dist/index.html --debug",
    "pack-electron:win": "electron-packager dist --asar --overwrite --platform=win32 --arch=ia32 --out=electron/out",
    "cordova": "ng build --base-href . --output-path cordova/www && cd cordova && cordova run android && cd ..",
    "pack-xamarin-android": "ng build --base-href . && cp -R dist/* XamarinApp/XamarinApp/XamarinApp.Android/Assets",
    "pack-xamarin-ios": "ng build --base-href . && cp -R dist/* XamarinApp/XamarinApp/XamarinApp.iOS/Content"
  },
  "dependencies": {
    "@angular/common": "^4.1.3",
    "@angular/compiler": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/forms": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@angular/platform-browser-dynamic": "^4.1.3",
    "@angular/router": "^4.1.3",
    "core-js": "^2.4.1",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "electron": "^1.6.2",
    "electron-packager": "^8.6.0",
    "@angular/platform-server": "^4.1.3",
    "@angular/cli": "1.0.0",
    "@angular/compiler-cli": "^4.1.3",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "protractor": "~5.1.0",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "^2.3.3"
  }
}